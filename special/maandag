#/bin/bash
echo 'espeak -s 120 -p 10 "start computers"' | at 17:50
echo 'espeak -s 120 -p 10 "kids are welcome"' | at 18:00
echo 'espeak -s 120 -p 10 "start to work"' | at 18:15
echo 'espeak -s 120 -p 10 "3, 2, 1, time to have a break"' | at 19:00
echo 'espeak -s 120 -p 10 "back to work"' | at 19:15
echo 'espeak -s 120 -p 10 "3, 2, 1, enjoy the rest of your day"' | at 20:00
